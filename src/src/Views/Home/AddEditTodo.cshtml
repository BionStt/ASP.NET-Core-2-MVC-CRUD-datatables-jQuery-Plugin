@model src.Models.Todo

@{ 
    Layout = null;
}
<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form onsubmit="return SubmitAddEdit(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="todoId" />
            <div class="form-group">
                <label asp-for="todoName" class="control-label"></label>
                <input asp-for="todoName" class="form-control" />
                <span asp-validation-for="todoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


